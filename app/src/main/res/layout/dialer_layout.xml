<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/settings_drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        tools:context="com.xura.mywifiphone.DialerActivity">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar"/>

        <View
            android:id="@+id/toolbar_dropshadow_view"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/app_bar"
            android:background="@drawable/toolbar_dropshadow" />

        <TextView
            android:layout_below="@+id/app_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="My Dialer"
            android:id="@+id/textView28" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- spacer view -->
            <View
                android:id="@+id/spacer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#00000000" />
            <!-- Dialpad shadow -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/shadow_length"
                android:background="@drawable/shadow_fade_up" />
            <include
                layout="@layout/dialpad_view_unthemed"
                android:theme="@style/Dialpad_Light" />

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_dial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:src="@drawable/ic_phone_white_24dp"
            app:borderWidth="0dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/fab_margin"/>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>